defaults
auth           on
tls            on
logfile ~/.msmtp.log

account       gmail
host          smtp.gmail.com
port          587
tls           on
tls_certcheck off
auth          on
from          zuzana.arnoldova@gmail.com
user          zuzana.arnoldova
passwordeval  "security find-generic-password -s mbsync-gmail-password -w"

account       icloud
host          smtp.mail.me.com
port          587
tls           on
tls_certcheck off
auth          on
from          zuzana.dostalova@icloud.com
user          zuzana.dostalova
passwordeval  "gpg -q --for-your-eyes-only --no-tty -d ~/.passwords/icloud.gpg"
